# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment (development/production)
ENV=development

# Server URLs
FRONTEND_URL=http://localhost:8000
BACKEND_URL=http://localhost:5000

# Server Ports
FRONTEND_PORT=8000
BACKEND_PORT=5000

# Backend Configuration
BACKEND_HOST=0.0.0.0
FLASK_DEBUG=True
FLASK_ENV=development
FLASK_APP=backend/src/app.py

# Frontend Configuration
FRONTEND_HOST=localhost

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# LLM Model Configuration
OPENAI_MODEL_TEXT=gpt-4  # Model for text analysis and test case generation
OPENAI_MODEL_VISION=gpt-4o  # Model for image analysis (vision capabilities)
OPENAI_MODEL_WEBSITE=gpt-4  # Model for website analysis
OPENAI_MODEL_API=gpt-4  # Model for API document analysis

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp,webp

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
SESSION_TYPE=filesystem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log